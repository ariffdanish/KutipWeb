@model IEnumerable<KutipWeb.Models.Collector>

@{
    ViewData["Title"] = "Collectors";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Collectors</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Add Collector
            </a>
        </div>
        <div class="card-body pt-4">
            <div class="table-responsive">
                <table class="table datatable">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.First().VehiclePlate)</th>
                            <th>@Html.DisplayNameFor(model => model.First().CompanyName)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.VehiclePlate)</td>
                                <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.CollectorId" class="btn btn-outline-info btn-sm me-1">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.CollectorId" class="btn btn-outline-warning btn-sm me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CollectorId" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No collectors found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
