@model KutipWeb.Models.Collector

@{
    ViewData["Title"] = "Create Collector";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Collector" asp-action="Index">Collectors</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body pt-4">
                    <h5 class="card-title">New Collector</h5>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <label asp-for="Name" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="PhoneNumber" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="VehiclePlate" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="VehiclePlate" class="form-control" placeholder="e.g. WXYZ 1234" />
                                <span asp-validation-for="VehiclePlate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="CompanyName" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" />
                                <span asp-validation-for="CompanyName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-9 offset-sm-3 d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-plus-circle me-1"></i> Create
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}