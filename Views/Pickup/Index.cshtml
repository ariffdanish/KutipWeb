@model IEnumerable<KutipWeb.Models.Pickup>

@{
    ViewData["Title"] = "Pickups";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Pickups</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Add Pickup
            </a>
        </div>
        <div class="card-body pt-4">
            <div class="table-responsive">
                <table class="table datatable">
                    <thead class="table-light">
                        <tr>
                            <th>Bin Location</th>
                            <th>Collector</th>
                            <th>Pickup Time</th>
                            <th>Status</th>
                            <th>Before Photo</th>
                            <th>During Photo</th>
                            <th>After Photo</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Bin != null ? item.Bin.Location : "N/A")</td>
                                <td>
                                    @item.Collector?.Name <br />
                                    <small class="text-muted">@item.Collector?.CompanyName</small>
                                </td>
                                <td>@item.PickupTime.ToLocalTime().ToString("dd MMM yyyy, HH:mm")</td>
                                <td>
                                    @switch (item.status)
                                    {
                                        case KutipWeb.Models.Pickup.Status.Pending:
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case KutipWeb.Models.Pickup.Status.Completed:
                                            <span class="badge bg-success">Completed</span>
                                            break;
                                        case KutipWeb.Models.Pickup.Status.Cancelled:
                                            <span class="badge bg-danger">Cancelled</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">Unknown</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.BeforePhotoUrl))
                                    {
                                        <img src="@item.BeforePhotoUrl" alt="Before Photo" class="img-thumbnail" style="max-width: 80px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Photo</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.DuringPhotoUrl))
                                    {
                                        <img src="@item.DuringPhotoUrl" alt="During Photo" class="img-thumbnail" style="max-width: 80px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Photo</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.AfterPhotoUrl))
                                    {
                                        <img src="@item.AfterPhotoUrl" alt="After Photo" class="img-thumbnail" style="max-width: 80px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No Photo</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.PickupId" class="btn btn-outline-info btn-sm me-1" title="Details">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.PickupId" class="btn btn-outline-warning btn-sm me-1" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PickupId" class="btn btn-outline-danger btn-sm" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">No pickups found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
