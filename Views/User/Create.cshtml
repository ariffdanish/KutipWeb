@model KutipWeb.Models.User

@{
    ViewData["Title"] = "Create User";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">User Management</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card">
                <div class="card-body pt-4">
                    <h5 class="card-title">New User</h5>

                    <form asp-action="Create" method="post" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger col-12"></div>

                        <div class="row mb-3">
                            <label asp-for="Username" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="Username" class="form-control" placeholder="Enter username" />
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Name" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Email" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Role" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<KutipWeb.Models.Role>()">
                                    <option value="">-- Select Role --</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Password" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="offset-sm-3 col-sm-9 d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-person-plus me-1"></i> Create
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i> Back
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @* Vendor and validation scripts *@
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
