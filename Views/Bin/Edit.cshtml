@model KutipWeb.Models.Bin

@{
    ViewData["Title"] = "Edit Bin";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Bin" asp-action="Index">Bins</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Edit Bin</h5>
        </div>
        <div class="card-body pt-4">
            <form asp-action="Edit" class="row g-3">
                <input type="hidden" asp-for="BinId" />

                <div class="col-md-6">
                    <label asp-for="PlateID" class="form-label"></label>
                    <input asp-for="PlateID" class="form-control" />
                    <span asp-validation-for="PlateID" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Description" class="form-label"></label>
                    <select asp-for="Description" class="form-select">
                        <option value="">-- Select Description --</option>
                        <option value="Available">Available</option>
                        <option value="NotAvailable">Not Available</option>
                        <option value="Broken">Broken</option>
                        <option value="New">New</option>
                    </select>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CreatedAt" class="form-label"></label>
                    <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="UpdatedAt" class="form-label"></label>
                    <input asp-for="UpdatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="UpdatedAt" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
