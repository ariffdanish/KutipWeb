@model KutipWeb.Models.Bin

@{
    ViewData["Title"] = "Create Bin";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Bin" asp-action="Index">Bins</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body pt-4">
                    <h5 class="card-title">New Bin</h5>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <label asp-for="PlateID" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="PlateID" class="form-control" placeholder="Enter plate ID" />
                                <span asp-validation-for="PlateID" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Location" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="Location" class="form-control" placeholder="Enter location" />
                                <span asp-validation-for="Location" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Description" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <select asp-for="Description" class="form-select">
                                    <option value="">-- Select Description --</option>
                                    <option value="Available">Available</option>
                                    <option value="NotAvailable">Not Available</option>
                                    <option value="Broken">Broken</option>
                                    <option value="New">New</option>
                                </select>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="CreatedAt" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
                                <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="UpdatedAt" class="col-sm-3 col-form-label text-end"></label>
                            <div class="col-sm-9">
                                <input asp-for="UpdatedAt" class="form-control" type="datetime-local" />
                                <span asp-validation-for="UpdatedAt" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-9 offset-sm-3 d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-plus-circle me-1"></i> Create
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
